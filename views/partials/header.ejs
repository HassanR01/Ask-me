<Style>
    header {
        min-height: 44px;
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: var(--open-white);
        position: fixed;
    }
    
    header .lightDark {
        position: relative;
        width: 50px;
        height: 20px;
        background: linear-gradient(90deg, rgb(192, 217, 255) 0%, rgba(0,0,96,1) 100%) ;
        margin-left: 20px ;
        border-radius: 30px;
        box-shadow: inset 0 0 10px black;
    }
    header .lightDark #onOof {
        position: absolute;
        top: 0;
        left: 1.5px;
        width: 20px;
        height: 20px;
        background-color: var(--main-color);
        transition: var(--main-transition);
        border-radius: 50%;
        cursor: pointer;
        box-shadow: inset 0 0 2px 1px black;
    }

    .onOof {
        left: 29px !important;
    }
    
    
    header nav {
        display: flex;
        margin: 0 10px;
    }
    header nav #iconBar {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        display: none;
        cursor: pointer;
    }
    header nav #iconBar span {
        width: 25px;
        height: 2px;
        background-color: var(--open-white);
        transition: var(--main-transition);
        margin: 3px;
    }

    header nav #iconBar .i1 {
        width: 12.5px;
    }

    header nav #iconBar .i3 {
        width: 12.5px;
    }

    header nav ul {
        display: flex;
    } 
    header nav ul li {
        position: relative;
        padding: 10px 10px;
        overflow: hidden;
    }
    header nav ul li::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 100%;
        width: 100%;
        height: 1px;
        background-color: var(--other-color);
        box-shadow: 0 0 10px var(--other-color);
        transition: var(--main-transition);
    }
    header nav ul li:hover::after {
        left: 0;
    }
    header nav ul li a {
        font-size: 1.2rem;
        font-family: var(--other-font);
        color: var(--other-color);
    }

    @media (max-width : 450px) {
        .show {
            height: 200px !important;
        }
        .span {
            width: 25px !important;
        }
        header {
            background-color: transparent;
        }

        header nav ul {
            transition: var(--main-transition);
            position: absolute;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            top: 44px;
            left: 0;
            width: 100%;
            height: 0px;
            overflow: hidden;
            background-color: #ffffff;
        }

        header nav ul li {
            border-bottom: 2px solid rgb(119, 119, 119);
            width: 100%;
            text-align: center;
            height: 50px;
        }

        header nav #iconBar {
            display: flex;
        }

    }
    .body {
        background: linear-gradient(90deg, rgb(0, 45, 84) 0%, rgba(0,0,54,1) 100%) !important;
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }
</Style>

<header>
    <div class="lightDark">
        <div id="onOof">

        </div>
    </div>
    <nav>
        <div id="iconBar">
            <span class="i1"></span>
            <span class="i2"></span>
            <span class="i3"></span>
        </div>
        <ul id="List">
            <li><a href="/">Home</a></li>
            <li><a href="/Asks">Add Asks</a></li>
            <li><a href="/UserAsk">Users Asks</a></li>
            <li><a href="/Contact">Contact</a></li>
        </ul>
    </nav>
</header>

<script>

if (localStorage.getItem('mode') === 'Dark') {
    document.getElementById('onOof').classList.add('onOof')
    document.body.classList.toggle('body')
}

document.getElementById('onOof').onclick = () => {
    document.getElementById("onOof").classList.toggle('onOof')
    document.body.classList.toggle('body')
    if (localStorage.getItem('mode') === 'Dark') {
        localStorage.setItem('mode' , 'Lite')
    } else {
        localStorage.setItem('mode' , 'Dark')
    }

}

document.getElementById('iconBar').onclick = () => {
    document.getElementById('List').classList.toggle('show')
    document.querySelectorAll('#iconBar span').forEach(span => {
        span.classList.toggle('span')
    });
}




</script>